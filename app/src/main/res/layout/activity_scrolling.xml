<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ScrollingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="424dp"
        android:layout_height="1004dp"
        android:background="#F1F1F1">

        <include
            android:id="@+id/include"
            layout="@layout/content_scrolling"
            android:layout_width="436dp"
            android:layout_height="830dp"
            android:visibility="visible"
            tools:layout_editor_absoluteX="-6dp"
            tools:layout_editor_absoluteY="-7dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="473dp"
            android:layout_height="89dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="212dp"
            android:background="#0B0915"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/B_home"
                android:layout_width="173dp"
                android:layout_height="55dp"
                android:layout_marginStart="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#0B0915"
                android:lineSpacingExtra="0sp"
                android:onClick="PerviePage"
                android:paddingTop="-15dp"
                android:paddingBottom="-20sp"
                android:text="Пульс"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#E6D1D1"
                android:textSize="34sp"
                app:cornerRadius="50dp"
                app:iconTint="#FF0C0C"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:strokeColor="#0B0915" />

            <Button
                android:id="@+id/history"
                android:layout_width="173dp"
                android:layout_height="55dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#5E4A148C"
                android:lineSpacingExtra="0sp"
                android:paddingTop="-15dp"
                android:paddingRight="20dp"
                android:paddingBottom="-20sp"
                android:text="Історія"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#E6D1D1"
                android:textSize="34sp"
                app:cornerRadius="50dp"
                app:iconTint="#FF0C0C"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:strokeColor="#000000" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/Clear"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="-270dp"
            android:layout_marginBottom="-21dp"
            android:backgroundTint="#A61111"
            android:ellipsize="middle"
            android:onClick="clearPreviousNumbers"
            android:text="Clear"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>